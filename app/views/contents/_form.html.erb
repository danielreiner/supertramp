<%= simple_form_for(@content, :url=>theme_card_contents_path(@theme, @card)) do |f| %>
  
  <%= f.input :title, :label => "Inhalt", :input_html => { :class => "span4" } %>
  <%= f.input :user_id, :label => "Autor" %>
  <%= f.input :theme_id, :label => "Thema" %>
  <%= f.submit "Inhalt anlegen", :class => "primary" %>
<% end %>
