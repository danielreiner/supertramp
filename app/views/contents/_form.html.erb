<%= simple_form_for(@content, :url=>theme_card_contents_path(@theme, @card)) do |f| %>
  
  <%= f.input :title, :label => "Inhalt", :input_html => { :class => "span2.5" } %>
  <%= f.input :position, :label => "Position" %>
  <%= f.input :card_id, :label => "Karten-ID" %>
  <%= f.input :category_id, :collection => @categories %>
  <%= f.input :theme_id, :label => "Thema" %>
  <%= f.submit "Inhalt anlegen", :class => "primary" %>
<% end %>
