<div class="page-header">
  <h1>Kategorien</h1>
</div>

<div class="well">
  <%= link_to 'Neue Kategorie erstellen', new_categorz_path, :class => 'btn large primary' %>
</div>

<table class="datatable table table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  <% @category.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= link_to category.title, category %></td>     
    </tr>
  <% end %>
  </tbody>
</table>
