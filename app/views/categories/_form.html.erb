<%= simple_form_for([category], :html => { :class => "horizontal-form breadcrumb-form" }) do |f| %>
  
  <%= f.input :title, :input_html => { :class => "span10" } %>
  


  <ul class="breadcrumb-actions">
    <li>
      <%= f.button :submit, :class => "primary" %>
    </li>
    <li>
      <%= link_to 'Zurück zur Übersicht', category_path(@theme.card), :class => "btn info" %>
    </li>
  </ul>
<% end %>

